<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <context-param>
        <param-name>defaultTab</param-name>
        <param-value>briefDescription</param-value>
    </context-param>

    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>edu.etu.web.Servlet</servlet-class>
        <!--<init-param>-->
            <!--<param-name>defaultTab</param-name>-->
            <!--<param-value>briefDescription</param-value>-->
        <!--</init-param>-->
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/items</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddItemToCart</servlet-name>
        <servlet-class>edu.etu.web.AddItemToCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoOrder</servlet-name>
        <servlet-class>edu.etu.web.DoOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoReview</servlet-name>
        <servlet-class>edu.etu.web.DoReview</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddItemToCart</servlet-name>
        <url-pattern>/add-item-to-cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveItemFromCart</servlet-name>
        <servlet-class>edu.etu.web.RemoveItemFromCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveItemFromCart</servlet-name>
        <url-pattern>/remove-item-from-cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoOrder</servlet-name>
        <url-pattern>/do-order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoReview</servlet-name>
        <url-pattern>/do-review</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/cart.jsp</url-pattern>
            <url-pattern>/order.jsp</url-pattern>
            <url-pattern>/login.jsp</url-pattern>
            <url-pattern>/personal-area.jsp</url-pattern>
            <url-pattern>/add-item-to-cart</url-pattern>
            <url-pattern>/remove-item-from-cart</url-pattern>
            <url-pattern>/do-order</url-pattern>
            <url-pattern>/do-review</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>user</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/auth/auth.jsp</form-login-page>
            <form-error-page>/auth/auth-error.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <filter>
        <display-name>LogPage</display-name>
        <filter-name>LogPage</filter-name>
        <filter-class>edu.etu.web.LogPage</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LogPage</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>/items</url-pattern>
    </filter-mapping>

    <filter>
        <display-name>LogAction</display-name>
        <filter-name>LogAction</filter-name>
        <filter-class>edu.etu.web.LogAction</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LogAction</filter-name>
        <url-pattern>/add-item-to-cart</url-pattern>
        <url-pattern>/remove-item-from-cart</url-pattern>
        <url-pattern>/do-order</url-pattern>
        <url-pattern>/do-review</url-pattern>
    </filter-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Context</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>